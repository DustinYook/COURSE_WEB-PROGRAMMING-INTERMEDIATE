  <link href="../reset.css" type="text/css" rel="stylesheet"/>
  <link href="http://fonts.googleapis.com/earlyacess/nanumgothic.css" type="text/css" rel="stylesheet"/>
  <style type="text/css">
	body{font-family:'Nanum Gothic',sans-serif;font-size:14px;line-height:0px}
	#wrap{width:100%;height:100%;display:inline-block;max-width:750px}
	aside{width:100%;display:block}
	/*Common*/
	img.w100{width:100%}
	section,article{width:100%;display:inline-block}
	/*//Common*/
	header{width:100%;background:#bb0000;display:inline-block;margin-top:-4px}
	header h1{width:20%;display:inline-block}
	header a.menu{width:5%;float:left;padding-top:5px}
	header a.search{width:5%;float:right;padding-top:5px}
	nav{width:100%;display:inline-block;background:white;border-bottom:solid #bb0000}
	nav a{width:20%;float:left;font-size:1em;line-height:2.4em;color:black;font-weight:bold}
	/*Contents*/
	.contents{width:100%;display:inline-block;position:relative}
	.prd_list{padding:15px 2%} /*위아래는 픽셀, 좌우는 퍼센트*/
	.prd_list ul{width:48%;display:inline-block;margin-bottom:20px}
	.prd_list ul li{width:100%;float:left;font-size:1em;line-height:1.8em;text-align:left}
	.prd_list ul li img{border:1px solid gray}
	.prd_list ul li.tit{font-weight:700}
	.prd_list ul li.price{font-size:1.6em;font-weight:800}
	.prd_list ul li select{width:100%;height:30px}
	/*Bottom Menu*/
	.bottom_menu{width:100%;position:fixed;bottom:0;left:0;height:60px;border-top:1px solid gray;background:white}
	.bottom_menu ul{width:100%;display:inline-block}
	.bottom_menu ul li{width:20%;float:left;height:60px}
	.bottom_menu ul li a{width:100%;height:60px; font-size:0.8em;padding-top:40px;color:black;display:inline-block;background-repeat:no-repeat;background-position:center 10px}
	.bottom_menu ul li a.btn1{background-image:url(images/stco_b_icon1.png);background-size:8%}
	/*위에서 background지칭하면 background-image를 써야함*/
	.bottom_menu ul li a.btn2{background-image:url(images/stco_b_icon2.png);background-size:10%}
	.bottom_menu ul li a.btn3{background-image:url(images/stco_b_icon3.png);background-size:10%}
	.bottom_menu ul li a.btn4{background-image:url(images/stco_b_icon4.png);background-size:10%}
	.bottom_menu ul li a.btn5{background-image:url(images/stco_b_icon5.png);background-size:10%}

	/*Footer*/
	footer{width:100%;background:gray;color:white;font-size:0.8em;display:block;padding:20px 0 80px 0}
	/*미디어쿼리*/
	/*iphone5*/
	@media all and (max-width:320px)
	{
		header h1{margin-top:-10px}
		nav a{font-size:0.8em}
		.prd_list ul li{white-space:nowrap;overflow:hidden;text-overflow:ellipsis}
		.prd_list ul li.price{font-size:1.2em}
		.bottom_menul ul li a.btn1{background-size:25%}
		.bottom_menul ul li a.btn2{background-size:35%}
		.bottom_menul ul li a.btn3{background-size:35%}
		.bottom_menul ul li a.btn4{background-size:35%}
		.bottom_menul ul li a.btn5{background-size:35%}
	}
	/*Galaxy S5*/
	@media all and (min-width:321px) and (max-width:360px)
	{
		header h1{margin-top:-10px}
		nav a{font-size:0.8em}
		.prd_list ul li{white-space:nowrap;overflow:hidden;text-overflow:ellipsis}
		.prd_list ul li.price{font-size:1.2em}
		.bottom_menul ul li a.btn1{background-size:25%}
		.bottom_menul ul li a.btn2{background-size:35%}
		.bottom_menul ul li a.btn3{background-size:35%}
		.bottom_menul ul li a.btn4{background-size:35%}
		.bottom_menul ul li a.btn5{background-size:35%}
	}	
	/*750이상*/
	@media all and (min-width:750px)
